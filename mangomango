import java.util.Scanner;
import java.util.Random;

public class mangomango {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        Random random = new Random();

        // Введення розміру матриці
        System.out.print("Введіть розмір матриці (n x n): ");
        int size = scanner.nextInt();

        // Створення та заповнення матриці випадковими числами
        int[][] matrix = new int[size][size];
        System.out.println("Згенерована матриця:");
        for (int i = 0; i < size; i++) {
            for (int j = 0; j < size; j++) {
                matrix[i][j] = random.nextInt(10) + 1; // Випадкові числа від 1 до 10
                System.out.print(matrix[i][j] + " ");
            }
            System.out.println();
        }

        // Введення рядка і стовпця для мінору
        System.out.print("Введіть номер рядка для мінору (1-" + size + "): ");
        int rowToRemove = scanner.nextInt() - 1; // Індексація з 0
        System.out.print("Введіть номер стовпця для мінору (1-" + size + "): ");
        int colToRemove = scanner.nextInt() - 1; // Індексація з 0

        // Створення мінору
        int[][] minor = new int[size - 1][size - 1];
        for (int i = 0, minorRow = 0; i < size; i++) {
            if (i == rowToRemove) continue; // Пропускаємо обраний рядок
            for (int j = 0, minorCol = 0; j < size; j++) {
                if (j == colToRemove) continue; // Пропускаємо обраний стовпець
                minor[minorRow][minorCol] = matrix[i][j];
                minorCol++;
            }
            minorRow++;
        }

        // Виведення мінору
        System.out.println("Мінор матриці:");
        for (int i = 0; i < size - 1; i++) {
            for (int j = 0; j < size - 1; j++) {
                System.out.print(minor[i][j] + " ");
            }
            System.out.println();
        }
    }
}
