import java.util.Scanner;

public class Main {

    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
 // Введення даних 
//ціле число
        System.out.print("Введіть ціле число(int): ");
        int integer = scanner.nextInt();
//число з плаваючою крапкою
        System.out.print("Введіть число з плаваючою крапкою: ");
        double floating = scanner.nextDouble();
//рядок
    scanner.nextLine();
    System.out.print("Введіть рядок: "); 
        String str = scanner.nextLine();       
//логічне значення
    System.out.print("Введіть логічне значення (true або false): ");
        boolean bool = scanner.nextBoolean();
// Виведення даних в різних форматах
        System.out.println("\nВивід даних у різних форматах:");

        // Форматування чисел та рядків
        System.out.printf("1. Восьмеричний формат цілого числа: %o%n", integer);
        System.out.printf("2. Десятковий формат цілого числа: %d%n", integer);
        System.out.printf("3. Шістнадцятковий формат цілого числа: %x%n", integer);
        System.out.printf("4. Число з плаваючою крапкою стандарт: %f%n", floating);
        System.out.printf("5. Число з плаваючою крапкою в експоненціальному форматі: %e%n", floating);
        System.out.printf("6. Число з плаваючою крапкою у шістнадцятковому форматі: %a%n", floating);
        
        // Форматування рядків
        System.out.printf("7. Рядок: %s%n", str);
        System.out.printf("8. Рядок з додаванням символу : %s%с%n", str);
        System.out.printf("9. Рядок в шістнадцятковому форматі: %h%n", str);
        
        // Форматування логічного значення
        System.out.printf("10. Логічне значення: %b%n", bool);
        scanner.close();
    }
}
